{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
