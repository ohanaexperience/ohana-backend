{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "isolatedModules": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@/db/*": ["db/*"]
        }
    },
    "include": ["src/**/*", "db/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
